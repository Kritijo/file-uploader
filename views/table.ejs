<%- include("partials/toggleDropDown") %>

<div class="greeting">
  <% if(!folderName) { %>
  <h2>Hi <%= user.name%>!</h2>
  <p>Upload files to your account and access them from anywhere.</p>
  <% } else {%>
  <h2>ðŸ“‚ <%= folderName %></h2>
  <% } %>
</div>
<div class="table">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Size</th>
        <th><img src="/icons/dots-horizontal.svg" /></th>
      </tr>
    </thead>
    <tbody>
      <% if (files.length === 0 && folders.length === 0) { %>
       <tr>
        <td colspan="4" style="text-align:center;">
          <img src="/icons/empty.svg" class="empty"/>
          <p style="font-weight:600;">No files uploaded yet.</p>
        </td>
      </tr>
      <% } %>
      <% if (folders.length > 0) { %> <%- include('folders', { folders: folders
      }) %> <% } %> <% if (files.length > 0) { %> <%- include('files', { index:
      folders.length, files: files }) %> <% } %>

    </tbody>
  </table>
</div>
